@model IEnumerable<Model.Veiculo>

@{
    ViewData["Title"] = "Index";
}

<h1>Veiculos Cadastrados</h1>

<p>
    <a asp-action="Create">Adicionar Veiculo </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodVeiculo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Renavam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmUso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodDono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CodVeiculo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Placa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Renavam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ano)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmUso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodDono)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { codigo = item.CodVeiculo }) |
                    @Html.ActionLink("Detalhes", "Details", new { codigo = item.CodVeiculo }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.CodVeiculo })
                </td>
            </tr>
        }
    </tbody>
</table>
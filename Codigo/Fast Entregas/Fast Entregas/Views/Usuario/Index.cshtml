@model IEnumerable<Model.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Usuários Cadastrados</h1>

<p>
    <a asp-action="Create">Adicionar Novo Usuário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusEntregador)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CodUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusEntregador)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CodUsuario }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CodUsuario }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CodUsuario })

                </td>
            </tr>
        }
    </tbody>
</table>

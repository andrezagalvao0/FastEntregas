@{
    Layout = "_LayoutHome";
    ViewData["Title"] = "Home Page";
}

<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<div class="container-fluid mb-md-4 p-4 text-center" style="box-shadow: 0px 0px 5px -3px black">
    <img class="img-fluid" src="~/imagens/Slogan.png" />
    <h4 style="font-family: Courier New, Courier, monospace">Sua Plataforma de Transporte</h4>
</div>

<div class="container-fluid mb-4 p-4 rounded" style="background-color: black; box-shadow: 0px 0px 15px -3px black">

    <div class="row">
        <div class="col-md-6">
            <img class="rounded" src="~/imagens/imgHome2.jpg" style="width: 100%; height: 280px;" />
        </div>

        <div class="col-md-6 text-center">
            <div class="row mt-md-5" style="margin-left:90px">
                <div class="col-md-3">
                    <i class="fas fa-car" style="font-size:36px;color:white"></i>
                </div>
                <div class="col-md-3">
                    <h4 style="color:white; margin-top: 10%">Transporte</h4>
                </div>
            </div>
            <p style="color:white; margin-top: 10%">Use o Fast Entregas para transportar sua encomenda de qualquer lugar para qualquer lugar com praticidade </p>
        </div>
    </div>

</div>

<div class="container-fluid mb-4 p-4 rounded" style="background-color:rgb(157,203,43); box-shadow: 0px 0px 15px -3px black">

    <div class="row">
        <div class="col-md-6 text-center">

            <div class="row mt-md-5" style="margin-left:90px">
                <div class="col-md-3">
                    <i class="fas fa-box" style="font-size:36px;color:white"></i>
                </div>
                <div class="col-md-3">
                    <h4 style="color:white; margin-top: 10%">Entrega</h4>
                </div>
            </div>
            <p style="color:white; margin-top: 10%">Faça pedidos de entrega no site, pode ser de qualquer tipo, temos todo tipo de entregador</p>
        </div>

        <div class="col-md-6">
            <img class="rounded" src="~/imagens/imgHome1.jpg" style="width: 100%; height: 280px;" />
        </div>
    </div>

</div>

<div class="container-fluid mb-4 p-4 rounded" style="background-color: darkgray; box-shadow: 0px 0px 15px -3px black">

    <div class="row">
        <div class="col-md-6">
            <img class="rounded" src="~/imagens/imgHome3.jpg" style="width: 100%; height: 280px;" />
        </div>

        <div class="col-md-6 text-center">
            <div class="row mt-md-5" style="margin-left:90px">
                <div class="col-md-3">
                    <i class="fas fa-money-bill-alt" style="font-size:36px;color:white"></i>
                </div>
                <div class="col-md-3">
                    <h4 style="color:white; margin-top: 10%">Pagamento</h4>
                </div>
            </div>
            <p style="color:white; margin-top: 10%">Pagameto fácil e rápido com diversas formas de pagamento</p>
        </div>
    </div>

</div>
